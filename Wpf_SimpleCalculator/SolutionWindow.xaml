<Window x:Name="solutionWindow" x:Class="Wpf_SimpleCalculator.SolutionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_SimpleCalculator"
        mc:Ignorable="d"
        Title="SolutionWindow" Height="500" Width="745" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel x:Name="resultsPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Width="660"/>
        </ScrollViewer>
    </Grid>
</Window>
